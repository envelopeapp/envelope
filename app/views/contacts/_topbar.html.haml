        %i{:class => 'icon icon-envelope'}
    .btn-toolbar
      - if current_user.accounts.empty?
        .btn-group
          = link_to new_account_path, :class => 'btn' do
            %i{:class => 'icon icon-plus'}
            Add Account
      - else
        .btn-group
          = link_to new_contact_path, :class => 'remote-modal btn', :data => { :toggle => 'modal' }, :rel => 'tooltip', :title => 'Add Contact', :'data-placement' => 'bottom' do
            %i{:class => 'icon icon-plus'}

    .btn-group.pull-right
      = link_to '#', :class => 'btn dropdown-toggle', :data => { :toggle => 'dropdown' } do
        %i.icon.icon-user
        = current_user.name
        %span.caret
      %ul.dropdown-menu
